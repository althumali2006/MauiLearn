<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApplvl2.Pages.Examples"
             Title="صفحة بهوية العلامة التجارية"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryBrandColor">#6200EE</Color>
            <Color x:Key="PrimaryVariantColor">#3700B3</Color>
            <Color x:Key="SecondaryBrandColor">#03DAC6</Color>
            <Color x:Key="SecondaryVariantColor">#018786</Color>
            <Color x:Key="BrandTextColor">#FFFFFF</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="OnSurfaceTextColor">#212121</Color>
            <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
            <Color x:Key="InputBorderColor">#BDBDBD</Color>
            <Color x:Key="ErrorColor">#B00020</Color>
            <x:Double x:Key="FontSizeH1">24</x:Double>
            <x:Double x:Key="FontSizeH2">20</x:Double>
            <x:Double x:Key="FontSizeBody">16</x:Double>
            <x:Double x:Key="FontSizeCaption">12</x:Double>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBrandColor}"/>
                <Setter Property="TextColor" Value="{StaticResource BrandTextColor}"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1.0" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBrandColor}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryVariantColor}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryVariantColor}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#BDBDBD" />
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryBrandColor}"/>
                <Setter Property="BorderColor" Value="{StaticResource PrimaryBrandColor}"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#1A6200EE" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#336200EE" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BorderColor" Value="#BDBDBD" />
                                    <Setter Property="TextColor" Value="#BDBDBD" />
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource OnSurfaceTextColor}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource InputBorderColor}"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}"/>
            </Style>

            <Style x:Key="InputBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource InputBorderColor}"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="8"/>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style x:Key="BrandCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="BorderColor" Value="#E0E0E0"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <Style x:Key="H1LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource FontSizeH1}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryVariantColor}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="BodyLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
                <Setter Property="TextColor" Value="{StaticResource OnSurfaceTextColor}"/>
                <Setter Property="LineHeight" Value="1.4"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25">

            <Label Text="نموذج تسجيل الدخول" 
                   Style="{StaticResource H1LabelStyle}"
                   HorizontalOptions="Center"/>

            <Label Text="البريد الإلكتروني" Style="{StaticResource BodyLabelStyle}" Margin="0,10,0,5"/>
            <Border Style="{StaticResource InputBorderStyle}">
                <Entry Placeholder="أدخل بريدك الإلكتروني" Keyboard="Email"/>
            </Border>

            <Label Text="كلمة المرور" Style="{StaticResource BodyLabelStyle}" Margin="0,10,0,5"/>
            <Border Style="{StaticResource InputBorderStyle}">
                <Entry Placeholder="أدخل كلمة المرور" IsPassword="True"/>
            </Border>

            <Label Text="بيانات الدخول غير صحيحة!" 
                   TextColor="{StaticResource ErrorColor}" 
                   FontSize="{StaticResource FontSizeCaption}" 
                   IsVisible="False" x:Name="ErrorMessageLabel"
                   Margin="0,5,0,10"/>

            <Button Text="تسجيل الدخول" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Text="إلغاء" Style="{StaticResource SecondaryButtonStyle}"/>

            <Frame Style="{StaticResource BrandCardStyle}" Margin="0,30,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ميزات التطبيق" FontSize="{StaticResource FontSizeH2}" FontAttributes="Bold" TextColor="{StaticResource SecondaryVariantColor}"/>
                    <BoxView HeightRequest="1" Color="{StaticResource InputBorderColor}"/>
                    <Label Style="{StaticResource BodyLabelStyle}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="&#x2714; واجهة مستخدم عصرية ومتناسقة&#10;"/>
                                <Span Text="&#x2714; سهولة التخصيص والتطوير&#10;"/>
                                <Span Text="&#x2714; أداء عالي عبر المنصات"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>