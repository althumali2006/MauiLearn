<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApplvl2.Pages.UpdatePage"
             Title="UpdatePage">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Entry Placeholder="Enter Name..." x:Name="NameEntry"/>
            <Entry Placeholder="Enter Age..." x:Name="AgeEntry"/>
            <Entry Placeholder="Enter Gender..." x:Name="GenderEntry"/>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Save" x:Name="BtnSave" Clicked="BtnSave_Clicked" WidthRequest="100"/>
                <Button Text="Delete" x:Name="BtnDelete" Clicked="BtnDelete_Clicked" WidthRequest="100"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>