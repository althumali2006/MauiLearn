<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTSOffLine.MainPage"
             Title="TTSOffLine"
             >
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Entry x:Name="WordEntry" HorizontalOptions="Fill" VerticalOptions="Start" BackgroundColor="White" TextColor="Black" Placeholder="Enter Word here..." PlaceholderColor="Grey" FontSize="18"/>
            <Button x:Name="BtnSpeak" Text="Speak" HorizontalOptions="Fill" VerticalOptions="Start" BackgroundColor="Wheat" TextColor="Black" FontSize="18" CornerRadius="15" Clicked="BtnSpeak_Clicked"/>
            <Image x:Name="Img" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="200" HeightRequest="200" Source="nora.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="ImgTap" Tapped="ImgTap_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
