<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTSOffLine.MainPage"
             Title="TTSOffLine"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="WordEntry" HorizontalOptions="Fill" VerticalOptions="Start" BackgroundColor="White" TextColor="Black" Placeholder="Enter Word here..." PlaceholderColor="Grey" FontSize="18" Margin="10,10,10,10"/>
            <Button x:Name="BtnSpeak" Text="Speak" HorizontalOptions="Fill" VerticalOptions="Start" BackgroundColor="Wheat" TextColor="Black" FontSize="18" Margin="10,10,10,10" CornerRadius="20" Clicked="BtnSpeak_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
