<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SwipeView">
    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="1" Color="White"/>
            <Label Text="Swipe View"/>
            <ListView x:Name="SwipedList1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItem Text="Click for Name" Clicked="SwipeItem_Clicked" CommandParameter="{Binding Name}" BackgroundColor="DarkRed"/>
                                </SwipeView.LeftItems>
                                <SwipeView.RightItems>
                                    <SwipeItem Text="Click for Details" Clicked="SwipeItem_Clicked" CommandParameter="{Binding Details}" BackgroundColor="DarkGreen"/>
                                </SwipeView.RightItems>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Name}"/>
                                    <Label Text="{Binding Details}"/>
                                </StackLayout>
                            </SwipeView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>