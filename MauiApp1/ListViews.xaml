<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ListViews"
             Title="ListViews">
    <ScrollView>
        <VerticalStackLayout>
        <ListView x:Name="ListView1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Details}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="ListView2">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ImageCell Text="{Binding Name}" Detail="{Binding Details}" ImageSource="{Binding Img}"/>
                    </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>