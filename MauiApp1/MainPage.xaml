<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="MauiApp1.MainPage">

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout
            Spacing="0"
            Padding="30,30"
            VerticalOptions="Center"
            >
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="Test Label1" HorizontalOptions="Center" TextColor="Red" BackgroundColor="Green" VerticalOptions="End" FontSize="Title" FontAttributes="Bold"/>
                <Label Text="Test Label2" HorizontalOptions="Center" TextColor="Red" BackgroundColor="Green" VerticalOptions="End" FontSize="Title" FontAttributes="Bold"/>
            </HorizontalStackLayout>
            <Label x:Name="label3" BackgroundColor="Red" HeightRequest="50" WidthRequest="350" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10" IsVisible="True">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="test" />
                        <Span Text="{x:Static system:Environment.NewLine}" />
                        <Span Text="label3" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="Test Label4" BackgroundColor="Red" FontAttributes="Bold,Italic" Margin="10" HeightRequest="100" Padding="10" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Text="Paragraph"/>
            <Editor Placeholder="Paragraph..." PlaceholderColor="LightYellow" AutoSize="TextChanges" MaxLength="1000" />
            <Frame BorderColor="ForestGreen" BackgroundColor="Gray">
                <VerticalStackLayout>
                    <Label Text="Entries"/>
                    <Entry Placeholder="Enter your name..." PlaceholderColor="AliceBlue" MaxLength="10"/>
                    <Entry Placeholder="Password" PlaceholderColor="Bisque" IsPassword="True"/>
                    <Entry Placeholder="Email" PlaceholderColor="DeepPink" Keyboard="Email" IsReadOnly="True"/>
                    <HorizontalStackLayout Spacing="10" Padding="10">
                        <Button Text="Click" x:Name="btn1" Clicked="btn1_Clicked"/>
                        <Button Text="Click" x:Name="btn2" Clicked="btn2_Clicked" />
                        <Button Text="Click" x:Name="btn3" Clicked="btn3_Clicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Radios"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <RadioButton Content="A" x:Name="rA" CheckedChanged="rA_CheckedChanged"/>
                        <RadioButton Content="B" x:Name="rB" CheckedChanged="rA_CheckedChanged"/>
                        <RadioButton Content="C" x:Name="rC" CheckedChanged="rA_CheckedChanged"/>
                    </HorizontalStackLayout>
                    <Label Text="Selected"/>
                    <Label x:Name="rdLabel"/>
                </VerticalStackLayout>
            </Frame>
            <Label Text="Sliders and Slider Value"/>
            <Label x:Name="sliderValue"/>
            <Slider MinimumTrackColor="Blue" MaximumTrackColor="Gold" BackgroundColor="Wheat" ThumbColor="Black" Minimum="0" Maximum="100" Value="20" ValueChanged="Slider_ValueChanged"/>
            <Border Stroke="DarkGreen" StrokeThickness="5">
                <Border.StrokeShape>
                    <Rectangle/>
                </Border.StrokeShape>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Horizontal Labels L1"/>
                    <Label Text="L2"/>
                    <Label Text="L3"/>
                </StackLayout>
            </Border>
            <Frame>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Images"/>
                    <Button Text="Image from URL" Clicked="Button_Clicked"/>
                    <Border BackgroundColor="Wheat" HeightRequest="200" WidthRequest="200">
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Image Source="nora.png" HeightRequest="128" WidthRequest="128" Aspect="AspectFit" BackgroundColor="White" Opacity="0.45"/>
                    </Border>
                    <Border HeightRequest="200" WidthRequest="200" BackgroundColor="Navy" Stroke="WhiteSmoke" StrokeThickness="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="red" Offset="1,1" Opacity="0.5" Radius="3"/>
                        </Border.Shadow>
                        <Image x:Name="img" Source="nora.png" HeightRequest="128" WidthRequest="128" Aspect="Fill" BackgroundColor="Black"/>
                    </Border>
                    <Button x:Name="switch2" Text="Image from Files" Clicked="switch2_Clicked"/>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Lines"/>
                    <Border BackgroundColor="Wheat" HeightRequest="200" WidthRequest="200">
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Image Source="nora.png" HeightRequest="128" WidthRequest="128" Aspect="AspectFit" BackgroundColor="White" Opacity="0.45"/>
                    </Border>
                    <Line Stroke="Wheat" StrokeThickness="2" X1="100" Y1="0" X2="1222" Y2="0"/>
                    <Border HeightRequest="200" WidthRequest="200" BackgroundColor="Navy" Stroke="WhiteSmoke" StrokeThickness="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="red" Offset="1,1" Opacity="0.5" Radius="3"/>
                        </Border.Shadow>
                        <Image Source="nora.png" HeightRequest="128" WidthRequest="128" Aspect="Fill" BackgroundColor="Black"/>
                    </Border>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10" Padding="5">
                    <Label Text="BoxView"/>
                    <Button Text="Bt1"/>
                    <BoxView HeightRequest="0.5" BackgroundColor="White"/>
                    <BoxView x:Name="boxView" HeightRequest="15" BackgroundColor="Black"/>
                    <BoxView HeightRequest="0.5" BackgroundColor="White"/>
                    <Button Text="Bt2"/>
                    <Label Text="Red Slider"/>
                    <Slider x:Name="sliderRed" ValueChanged="slider_ValueChanged" Minimum="0" Maximum="255"/>
                    <Label Text="Green Slider"/>
                    <Slider x:Name="sliderGreen" ValueChanged="slider_ValueChanged" Minimum="0" Maximum="255"/>
                    <Label Text="Blue Slider"/>
                    <Slider x:Name="sliderBlue" ValueChanged="slider_ValueChanged" Minimum="0" Maximum="255"/>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10" Padding="5">
                    <Label Text="BoxView"/>
                    <Button Text="Bt1"/>
                    <BoxView HeightRequest="1" BackgroundColor="White"/>
                    <BoxView x:Name="boxSquare" HeightRequest="1" WidthRequest="1" BackgroundColor="White"/>
                    <BoxView HeightRequest="1" BackgroundColor="White"/>
                    <Button Text="Bt2"/>
                    <Label Text="Size Slider"/>
                    <Slider ValueChanged="sliderSquare_ValueChanged" Minimum="1" Maximum="20"/>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10" Padding="5">
                    <Label Text="Pickers"/>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Selected Color:"/>
                        <Label x:Name="selectedFilter"/>
                    </HorizontalStackLayout>
                    <Picker Title="Filters" TextColor="White" FontSize="18" SelectedIndexChanged="Picker_SelectedIndexChanged">
                        <Picker.Items>
                            <x:String>Red</x:String>
                            <x:String>Green</x:String>
                            <x:String>Blue</x:String>
                            <x:String>White</x:String>
                            <x:String>Black</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10" Padding="5">
                    <Label Text="Date Picker"/>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Selected Date:"/>
                        <Label x:Name="selectedDate"/>
                    </HorizontalStackLayout>
                    <DatePicker x:Name="datePicker" DateSelected="datePicker_DateSelected"/>
                </VerticalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout Spacing="10" Padding="5">
                    <Label Text="Time Picker"/>
                    <TimePicker/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
